{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(ls:*)",
      "Bash(rg:*)",
      "Bash(fd:*)",
      "Bash(timeout:*)",
      "Bash(git commit:*)",
      "Bash(git pull:*)",
      "Bash(git checkout:*)",
      "Bash(git branch:*)",
      "Bash(git fetch:*)",
      "Bash(gh pr view:*)",
      "Bash(bun:*)",
      "Bash(gradle:*)",
      "WebFetch(domain:bun.sh)",
      "WebFetch(domain:github.com)"
    ],
    "deny": [],
    "defaultMode": "plan"
  },
  "model": "opus",
  "enableAllProjectMcpServers": true,
  "env": {
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "true"
  }
}
